
@{
    ViewBag.Title = "Admin Page";
}
<style>
    ul {
        font-family: Arial, Verdana;
        font-size: 16px;
        margin: 0;
        padding: 0;
        list-style: none;
    }

        ul li {
            display: block;
            position: relative;
            float: left;
        }

    li ul {
        display: none;
    }

    ul li a {
        display: block;

        color: black;
        border-top: 1px solid black;
        padding: 5px 15px 5px 15px;
        margin-left: 1px;
        white-space: nowrap;
    }

        ul li a:hover {
            background: white;
        }

    li:hover ul {
        display: block;
        position: absolute;
    }

    li:hover li {
        float: none;
        font-size: 14px;
    }

    li:hover a {
        background: #D7C4F8;
    }

    li:hover li a:hover {
        background: white;
    }
</style>
<h2>Admin Page</h2>

<div layout:fragment="site_content">
    <div class="container" style="margin-top:8%">
        <div class="col-sm-3">

            <ul class="list-group">
                <li class="list-group-item info" aria-disabled="true">DASHBOARD</li>
                <li class="list-group-item">
                    <a href="/Notifications">Notifications</a>
                </li>
                <li class="list-group-item">
                    <a href="/Organizations">Organizations</a>
                </li>
                <li class="list-group-item">
                    <a href="/CategoryTasks">Category Task</a>
                </li>

                <li class="list-group-item">
                    <a href="/Calendars">Calendars</a>
                </li>
                <li class="list-group-item">
                    <a href="/Users">Users</a>
                </li>

            </ul>
        </div>
        <div class="col-sm-9">



            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img style="width:1200px; height:500px" src="https://provisionfitness.net/wp-content/uploads/2017/07/To-Do-List.jpg" alt="...">
                        <div class="carousel-caption">
                            <h2 class="animated bounceInRight" style="animation-delay: 1s; color:black">
                                To Do List
                            </h2>

                        </div>
                    </div>
                    <div class="item">
                        <img style="width:1200px; height:500px" src="https://foog.me/wp-content/uploads/2015/10/time_man.png" alt="...">
                        <div class="carousel-caption">
                            <h2 class="animated slideInDown" style="animation-delay: 1s; color:black">
                                Time Management
                            </h2>

                        </div>
                    </div>

                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>



        </div>

    </div>
</div>




